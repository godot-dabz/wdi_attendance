<h1>Please Login</h1>


<%= form_tag("/sessions", method: "post") do %>
  <%= label_tag(:email, "Email") %>
  <%= text_field_tag(:email) %>
  <%= label_tag(:password, "Password") %>
  <%= password_field_tag (:password) %>
  <%= submit_tag("Login") %>
<% end %>

<%= button_to "Register", new_user_path, method: "get" %>

